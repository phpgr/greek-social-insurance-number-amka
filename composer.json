{
    "name": "phpgr/greek_social_insurance_number",
    "description": "A value object class to for Greek Social Insurance Number (AMKA)",
    "license": "MIT",
    "homepage": "https://github.com/phpgr/php_valid_AMKA",
    "authors": [
        {
            "name": "George Mponos",
            "email": "gmponos@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "GreekSocialInsuranceNumber\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GreekSocialInsuranceNumber\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
